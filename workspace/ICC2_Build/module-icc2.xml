<?xml version="1.0" encoding="UTF-8"?>
<modules>
	<module>
		<id>icc2</id>
		<name>@NAME@</name>
		<description>@DESCRIPTION@</description>
		<version>@VERSION@</version>
		<license>license.html</license>
		<requiredignitionversion>7.7.0</requiredignitionversion>
		<requiredframeworkversion>6</requiredframeworkversion>
		<freemodule>true</freemodule>
		<documentation>index.html</documentation>

		<!-- Add the module dependencies for each scope -->
		<!-- NOTE: Build fails here if we specify a Gateway dependency -->
		<depends scope="D">fpmi</depends>
		
		<!-- Load in our jars for each scope -->
		<jar scope="CD">icc2-client.jar.pack.gz</jar>
		<jar scope="D">icc2-designer.jar.pack.gz</jar>
		<jar scope="D">icc2-common.jar.pack.gz</jar>
		<jar scope="G">icc2-gateway.jar</jar>
		<jar scope="G">icc2-common.jar</jar>
		<jar scope="GD">icc2-blocks.jar</jar>
		<jar scope="G">commons-math3-3.1.1.jar</jar>
		<jar scope="GD">jackson-core-2.2.3.jar</jar>
		<jar scope="GD">jackson-databind-2.2.3.jar</jar>
		<jar scope="GD">jackson-annotations-2.2.3.jar</jar>
		<!-- Tell the Gateway/Designer/Client where to find the hooks -->
		<hook scope="G">com.ils.icc2.gateway.ICC2GatewayHook</hook>
		<hook scope="D">com.ils.icc2.designer.ICC2DesignerHook</hook>
		<hook scope="C">com.ils.icc2.client.ICC2ClientHook</hook>
	</module>
</modules>
