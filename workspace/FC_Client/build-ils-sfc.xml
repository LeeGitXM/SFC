<project name="ILSSFCModuleBuilder" basedir="../" default="BuildAndInstallModule">

	<import file="${basedir}/FC_Build/build.xml"/>

	<property name="version.build" value="2" />	
	<!-- Change version.beta value to "" for release builds -->
	<property name="version.beta" value="-development" />		
	<property name="FCModule.version" value="1.0.0.${version.build}" />
	<property name="FCModule.name" value="ILS-SFC" />
	<property name="FCModule.release" value="0.4" />
	<property name="FCModule.description" value="ICC 2014 - Block and Connector Demo Application" />
	<property name="root.dir" value="${basedir}/../.." />
	<property name="jar.dir" value="${root.dir}/external/lib" />
	<property name="sdk.dir" value="${root.dir}/ignition-77/lib" />
	<property name="block.jar.name" value="FC-blocks.jar" />
	<property name="block.bin.dir" value="${root.dir}/FC/workspace/Block/bin" />
	<property name="block.src.dir" value="${root.dir}/FC/workspace/Block/src" />
	<property name="ant.build.javac.source" value="1.7"/>
	<property name="ant.build.javac.target" value="1.7"/>
		

	<!-- For the blocks -->
	<path id="CustomSteps.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/FC_Build/bin/FC_Common/dist/" includes="*.jar" />
	</path>
	
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="FC_Common.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
	</path>
		
	<!-- Gateway jar classpath -->
	<path id="FC_Gateway.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/FC_Build/bin/FC_Common/dist/" includes="*.jar" />
	</path>	
	<!-- Client jar classpath -->
	<path id="FC_Client.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/FC_Build/bin/FC_Common/dist/" includes="*.jar" />
	</path>
	
	<!-- Designer jar classpath -->
	<path id="FC_Designer.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/FC_Build/bin/FC_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/FC_Build/bin/${FCModule.name}_Client/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${block.jar.name}" />
	</path>

	
	<!-- This target will build the toolkit module and deploy it to the local Ignition gateway -->
		<target name="BuildAndInstallModule" depends="clean, build, deploy" />
	
	<!-- Clean Block Definition -->
	<target name="clean.block" >
		<mkdir dir="${block.bin.dir}"/>
		<delete file="${jar.dir}/${block.jar.name}" />
		<delete>
		    <fileset dir="${block.bin.dir}">
		        <include name="**/*.class"/>
		    </fileset>
		</delete>
	</target>

	<!-- Cleans all previously built files (leaves doc) -->
	<target name="clean" depends="clean.block" description="Remove existing build products" >
		<delete dir="${basedir}/FC_Build/bin" />
		<delete dir="${basedir}/FC_Build/modules" />
		<delete dir="${basedir}/FC_Build/release" />
		<delete dir="${basedir}/FC_Build/temp_modl" />   
	</target>	
	
	<!-- Compile the Block Definition library -->
	<target name="block.build" description="Compile the source">
		<mkdir dir="${block.bin.dir}"/>
		<javac destdir="${block.bin.dir}" debug="true" includeantruntime="false">
			<src path="${block.src.dir}"/>
			<classpath refid="CustomSteps.classpath"/>
		</javac>
	</target>
	<target name ="block.jar" description="Create a jar for the Block Definition library">
		<jar destfile="${jar.dir}/${block.jar.name}" includes="**/*.class" basedir="${block.bin.dir}"/>
	</target>
	
	
	<!-- Builds the toolkit module jars and the final .modl file -->
	<target name="build"   description="Compile the source">
		<echo message="${FCModule.name} ${FCModule.version}" />	
		<delete dir="${basedir}/FC_Build/temp_modl" />	
		
		<!-- build.date and version.build are both defined in build.xml -->
		<echo message="Build date: ${build.date}" />
		<echo message="Build version: ${version.build}" />	
				
		<!-- FC Common jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${FCModule.name}_Common" />
			<param name="sourceDirFolder" value="${FCModule.name}_Common" />
			<param name="jarName" value="ils-sfc-common" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${FCModule.name}_Common.classpath"/>
		</antcall>
		
		<!-- Compile the Block Definition library -->
		<echo message="Compiling block definitions" />
		<mkdir dir="${block.bin.dir}"/>
		<javac destdir="${block.bin.dir}" debug="true" includeantruntime="false">
				<src path="${block.src.dir}"/>
				<classpath refid="CustomSteps.classpath"/>
		</javac>
		<echo message="Creating the block definition jar file" />
		<jar destfile="${jar.dir}/${block.jar.name}" includes="**/*.class" basedir="${block.bin.dir}"/>
	
		
		<!-- FC Gateway jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${FCModule.name}_Gateway" />
			<param name="sourceDirFolder" value="${FCModule.name}_Gateway" />
			<param name="jarName" value="ils-sfc-gateway" />
			<param name="javacSource" value="1.7" />
			<param name="[replace]FCGateway.properties:Meta.Version" value="${version.build}" />
			<param name="[replace]FCGateway.properties:Meta.ReleaseDate" value="${build.date}" />
			<param name="module.build.classpath" value="${FCModule.name}_Gateway.classpath"/>
		</antcall>

		<!-- FC Client jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${FCModule.name}_Client" />
			<param name="sourceDirFolder" value="${FCModule.name}_Client" />
			<param name="jarName" value="ils-sfc-client" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${FCModule.name}_Client.classpath"/>
		</antcall>
		
		<!-- FC Designer jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${FCModule.name}_Designer" />
			<param name="sourceDirFolder" value="${FCModule.name}_Designer" />
			<param name="jarName" value="ils-sfc-designer" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${FCModule.name}_Designer.classpath"/>
		</antcall>
		
		<!-- Create .modl file -->
		<echo message="Making ${FCModule.name} modl" />

		<mkdir dir="${basedir}/FC_Build/temp_modl" />
		<mkdir dir="${basedir}/FC_Build/modules" />
		

		<copy file="${basedir}/FC_Build/module-FC.xml" tofile="${basedir}/FC_Build/temp_modl/module.xml" overwrite="true" />

		<replace file="${basedir}/FC_Build/temp_modl/module.xml" token="@NAME@" value="${FCModule.name}" />
		<replace file="${basedir}/FC_Build/temp_modl/module.xml" token="@DESCRIPTION@" value="${FCModule.description}" />
		<replace file="${basedir}/FC_Build/temp_modl/module.xml" token="@VERSION@" value="${FCModule.version}" />

		<!-- Pack200 and then copy the designer, client jars -->
		<pack200 src="${basedir}/FC_Build/bin/${FCModule.name}_Client/dist/ils-sfc-client.jar" destfile="${basedir}/FC_Build/temp_modl/FC-client.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/FC_Build/bin/${FCModule.name}_Designer/dist/ils-sfc-designer.jar" destfile="${basedir}/FC_Build/temp_modl/FC-designer.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/FC_Build/bin/${FCModule.name}_Common/dist/ils-sfc-common.jar" destfile="${basedir}/FC_Build/temp_modl/FC-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/ils-sfc-steps.jar" destfile="${basedir}/FC_Build/temp_modl/FC-blocks.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		
		
		<!-- Copy gateway jar -->
		<copy file="${basedir}/FC_Build/bin/${FCModule.name}_Gateway/dist/ils-sfc-gateway.jar" todir="${basedir}/FC_Build/temp_modl/" />
		<copy file="${basedir}/FC_Build/bin/${FCModule.name}_Common/dist/ils-sfc-common.jar" todir="${basedir}/FC_Build/temp_modl/" />
		
		<!-- Copy dependent jars -->
		<copy file="${basedir}/../../external/lib/commons-math3-3.1.1.jar" todir="${basedir}/FC_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/ils-sfc-blocks.jar" todir="${basedir}/FC_Build/temp_modl/" />

		<!-- Copy license file and javadoc into the bundle -->
		<mkdir dir="${basedir}/FC_Build/doc" />
		<copy file="${basedir}/FC_Build/license.html" todir="${basedir}/FC_Build/temp_modl/" />
		<copy todir="${basedir}/FC_Build/temp_modl/doc">
		    <fileset dir="${basedir}/FC_Build/doc"/>
		</copy>
		<!-- Echo the version into .version in the bundle and to be saved -->
		<echo message="${FCModule.name}-${FCModule.version}:${FCModule.release}" file="${basedir}/FC_Build/temp_modl/.version" append="false"/>
		<echo message="${FCModule.name}-${FCModule.name}:${FCModule.release}" file="${basedir}/FC_Build/.version" append="false"/>
		
		<!-- Zip it all up -->
		<zip zipfile="${basedir}/FC_Build/modules/${FCModule.name}-module-unsigned.modl" basedir="${basedir}/FC_Build/temp_modl" />
	</target>

	<!-- Installs FC module in local Ignition gateway. Note that the gateway must be running in developer mode for this to succeed. -->
	<target name="deploy" depends="build" >
		<echo message="Installing ${FCModule.name} on Ignition Gateway." />
		<postmodule posturl="${local.gateway.url}" modulefile="${basedir}/FC_Build/modules/${FCModule.name}-module-unsigned.modl" />
	</target>	

</project>

