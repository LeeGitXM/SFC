<project name="ICC2ModuleBuilder" basedir="../" default="BuildAndInstallModule">

	<import file="${basedir}/ICC2_Build/build.xml"/>

	<property name="version.build" value="2" />	
	<!-- Change version.beta value to "" for release builds -->
	<property name="version.beta" value="-development" />		
	<property name="ICC2Module.version" value="1.0.0.${version.build}" />
	<property name="ICC2Module.name" value="ICC2" />
	<property name="ICC2Module.release" value="0.4" />
	<property name="ICC2Module.description" value="ICC 2014 - Block and Connector Demo Application" />
	<property name="root.dir" value="${basedir}/../.." />
	<property name="jar.dir" value="${root.dir}/external/lib" />
	<property name="sdk.dir" value="${root.dir}/ignition-77/lib" />
	<property name="block.jar.name" value="icc2-blocks.jar" />
	<property name="block.bin.dir" value="${root.dir}/icc2/workspace/Block/bin" />
	<property name="block.src.dir" value="${root.dir}/icc2/workspace/Block/src" />
	<property name="ant.build.javac.source" value="1.7"/>
	<property name="ant.build.javac.target" value="1.7"/>
		

	<!-- For the blocks -->
	<path id="BlockDefinition.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/ICC2_Build/bin/ICC2_Common/dist/" includes="*.jar" />
	</path>
	
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="ICC2_Common.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
	</path>
		
	<!-- Gateway jar classpath -->
	<path id="ICC2_Gateway.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/ICC2_Build/bin/ICC2_Common/dist/" includes="*.jar" />
	</path>	
	<!-- Client jar classpath -->
	<path id="ICC2_Client.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/ICC2_Build/bin/ICC2_Common/dist/" includes="*.jar" />
	</path>
	
	<!-- Designer jar classpath -->
	<path id="ICC2_Designer.classpath">
		<path refid="ExternalJar.classpath" />
		<path refid="Ignition_SDK.classpath" />
		<fileset dir="${basedir}/ICC2_Build/bin/ICC2_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Client/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${block.jar.name}" />
	</path>

	
	<!-- This target will build the toolkit module and deploy it to the local Ignition gateway -->
		<target name="BuildAndInstallModule" depends="clean, build, deploy" />
	
	<!-- Clean Block Definition -->
	<target name="clean.block" >
		<mkdir dir="${block.bin.dir}"/>
		<delete file="${jar.dir}/${block.jar.name}" />
		<delete>
		    <fileset dir="${block.bin.dir}">
		        <include name="**/*.class"/>
		    </fileset>
		</delete>
	</target>

	<!-- Cleans all previously built files (leaves doc) -->
	<target name="clean" depends="clean.block" description="Remove existing build products" >
		<delete dir="${basedir}/ICC2_Build/bin" />
		<delete dir="${basedir}/ICC2_Build/modules" />
		<delete dir="${basedir}/ICC2_Build/release" />
		<delete dir="${basedir}/ICC2_Build/temp_modl" />   
	</target>	
	
	<!-- Compile the Block Definition library -->
	<target name="block.build" description="Compile the source">
		<mkdir dir="${block.bin.dir}"/>
		<javac destdir="${block.bin.dir}" debug="true" includeantruntime="false">
			<src path="${block.src.dir}"/>
			<classpath refid="BlockDefinition.classpath"/>
		</javac>
	</target>
	<target name ="block.jar" description="Create a jar for the Block Definition library">
		<jar destfile="${jar.dir}/${block.jar.name}" includes="**/*.class" basedir="${block.bin.dir}"/>
	</target>
	
	
	<!-- Builds the toolkit module jars and the final .modl file -->
	<target name="build"   description="Compile the source">
		<echo message="${ICC2Module.name} ${ICC2Module.version}" />	
		<delete dir="${basedir}/ICC2_Build/temp_modl" />	
		
		<!-- build.date and version.build are both defined in build.xml -->
		<echo message="Build date: ${build.date}" />
		<echo message="Build version: ${version.build}" />	
				
		<!-- ICC2 Common jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${ICC2Module.name}_Common" />
			<param name="sourceDirFolder" value="${ICC2Module.name}_Common" />
			<param name="jarName" value="icc2-common" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${ICC2Module.name}_Common.classpath"/>
		</antcall>
		
		<!-- Compile the Block Definition library -->
		<echo message="Compiling block definitions" />
		<mkdir dir="${block.bin.dir}"/>
		<javac destdir="${block.bin.dir}" debug="true" includeantruntime="false">
				<src path="${block.src.dir}"/>
				<classpath refid="BlockDefinition.classpath"/>
		</javac>
		<echo message="Creating the block definition jar file" />
		<jar destfile="${jar.dir}/${block.jar.name}" includes="**/*.class" basedir="${block.bin.dir}"/>
	
		
		<!-- ICC2 Gateway jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${ICC2Module.name}_Gateway" />
			<param name="sourceDirFolder" value="${ICC2Module.name}_Gateway" />
			<param name="jarName" value="icc2-gateway" />
			<param name="javacSource" value="1.7" />
			<param name="[replace]ICC2Gateway.properties:Meta.Version" value="${version.build}" />
			<param name="[replace]ICC2Gateway.properties:Meta.ReleaseDate" value="${build.date}" />
			<param name="module.build.classpath" value="${ICC2Module.name}_Gateway.classpath"/>
		</antcall>

		<!-- ICC2 Client jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${ICC2Module.name}_Client" />
			<param name="sourceDirFolder" value="${ICC2Module.name}_Client" />
			<param name="jarName" value="icc2-client" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${ICC2Module.name}_Client.classpath"/>
		</antcall>
		
		<!-- ICC2 Designer jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${ICC2Module.name}_Designer" />
			<param name="sourceDirFolder" value="${ICC2Module.name}_Designer" />
			<param name="jarName" value="icc2-designer" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="${ICC2Module.name}_Designer.classpath"/>
		</antcall>
		
		<!-- Create .modl file -->
		<echo message="Making ${ICC2Module.name} modl" />

		<mkdir dir="${basedir}/ICC2_Build/temp_modl" />
		<mkdir dir="${basedir}/ICC2_Build/modules" />
		

		<copy file="${basedir}/ICC2_Build/module-ICC2.xml" tofile="${basedir}/ICC2_Build/temp_modl/module.xml" overwrite="true" />

		<replace file="${basedir}/ICC2_Build/temp_modl/module.xml" token="@NAME@" value="${ICC2Module.name}" />
		<replace file="${basedir}/ICC2_Build/temp_modl/module.xml" token="@DESCRIPTION@" value="${ICC2Module.description}" />
		<replace file="${basedir}/ICC2_Build/temp_modl/module.xml" token="@VERSION@" value="${ICC2Module.version}" />

		<!-- Pack200 and then copy the designer, client jars -->
		<pack200 src="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Client/dist/icc2-client.jar" destfile="${basedir}/ICC2_Build/temp_modl/icc2-client.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Designer/dist/ICC2-designer.jar" destfile="${basedir}/ICC2_Build/temp_modl/icc2-designer.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Common/dist/icc2-common.jar" destfile="${basedir}/ICC2_Build/temp_modl/icc2-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/icc2-blocks.jar" destfile="${basedir}/ICC2_Build/temp_modl/icc2-blocks.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-core-2.2.3.jar" destfile="${basedir}/ICC2_Build/temp_modl/jackson-core-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" destfile="${basedir}/ICC2_Build/temp_modl/jackson-databind-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" destfile="${basedir}/ICC2_Build/temp_modl/jackson-annotations-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		
		<!-- Copy gateway jar -->
		<copy file="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Gateway/dist/icc2-gateway.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy file="${basedir}/ICC2_Build/bin/${ICC2Module.name}_Common/dist/icc2-common.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		
		<!-- Copy dependent jars -->
		<copy file="${basedir}/../../external/lib/jackson-core-2.2.3.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/commons-math3-3.1.1.jar" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/icc2-blocks.jar" todir="${basedir}/ICC2_Build/temp_modl/" />

		<!-- Copy license file and javadoc into the bundle -->
		<mkdir dir="${basedir}/ICC2_Build/doc" />
		<copy file="${basedir}/ICC2_Build/license.html" todir="${basedir}/ICC2_Build/temp_modl/" />
		<copy todir="${basedir}/ICC2_Build/temp_modl/doc">
		    <fileset dir="${basedir}/ICC2_Build/doc"/>
		</copy>
		<!-- Echo the version into .version in the bundle and to be saved -->
		<echo message="${ICC2Module.name}-${ICC2Module.version}:${ICC2Module.release}" file="${basedir}/ICC2_Build/temp_modl/.version" append="false"/>
		<echo message="${ICC2Module.name}-${ICC2Module.name}:${ICC2Module.release}" file="${basedir}/ICC2_Build/.version" append="false"/>
		
		<!-- Zip it all up -->
		<zip zipfile="${basedir}/ICC2_Build/modules/${ICC2Module.name}-module-unsigned.modl" basedir="${basedir}/ICC2_Build/temp_modl" />
	</target>

	<!-- Installs ICC2 module in local Ignition gateway. Note that the gateway must be running in developer mode for this to succeed. -->
	<target name="deploy" depends="build" >
		<echo message="Installing ${ICC2Module.name} on Ignition Gateway." />
		<postmodule posturl="${local.gateway.url}" modulefile="${basedir}/ICC2_Build/modules/${ICC2Module.name}-module-unsigned.modl" />
	</target>	

</project>

