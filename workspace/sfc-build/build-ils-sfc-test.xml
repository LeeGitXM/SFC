<project name="SFCTestTModuleBuilder" basedir="../" default="BuildAndInstallModule">

	<import file="${basedir}/sfc-build/build.xml"/>

	<property name="version.build" value="0" />	
	<!-- Change version.beta value to "" for release builds -->
	<property name="version.beta" value="-development" />		
	<property name="sfc.test.version" value="1.0.0.${version.build}" />
	<property name="sfc.name" value="ILS-SFC" />
	<property name="sfc.test.name" value="ILS-SFC-TEST" />
	<property name="sfc.test.release" value="0.5" />
	<property name="sfc.test.description" value="Sequential Function Chart - Test" />
	<property name="root.dir" value="${basedir}/../.." />
	<property name="jar.dir" value="${root.dir}/external/lib" />
	<property name="sdk.dir" value="${root.dir}/ignition-77/lib" />
	<property name="common.jar.name" value="ils-common.jar" />
	<property name="common.bin.dir" value="${root.dir}/common/workspace/ILS_Common/bin" />
	<property name="common.src.dir" value="${root.dir}/common/workspace/ILS_Common/src" />
	<property name="step.jar.name" value="sfc-chart-steps.jar" />
	<property name="step.bin.dir" value="${root.dir}/sfc/workspace/sfc-step/bin" />
	<property name="step.src.dir" value="${root.dir}/sfc/workspace/sfc-step/src" />
	<property name="ant.build.javac.source" value="1.7"/>
	<property name="ant.build.javac.target" value="1.7"/>
		
	<!-- External jar classpath -->
	<path id="ils-classpath">
	   <fileset dir="${jar.dir}">
	      <include name="*.jar"/>
	   </fileset>
		<fileset dir="${sdk.dir}">
			 <include name="*.jar"/>
		</fileset>
	   <pathelement path="${build.dir}"/>
	</path>
	
	
	<!-- Common jar classpath -->
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="external.jar.classpath">
		<path refid="Ignition_SDK.classpath" />
		<path refid="ExternalJar.classpath" />
	</path>
		
	<!-- Gateway jar classpath -->
	<path id="sfc.test.gateway.classpath">
		<path refid="external.jar.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.name}_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.name}_Gateway/dist/" includes="*.jar" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.test.name}_Common/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${step.jar.name}" />
	</path>	
	<!-- Client jar classpath -->
	<path id="sfc.test.client.classpath">
		<path refid="external.jar.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.test.name}_Common/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${step.jar.name}" />
	</path>
	
	<!-- Designer jar classpath -->
	<path id="sfc.test.designer.classpath">
		<path refid="external.jar.classpath" />
		<path refid="ExternalJar.classpath" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.test.name}_Common/dist/" includes="*.jar" />
		<fileset dir="${basedir}/sfc-build/bin/${sfc.test.name}_Client/dist/" includes="*.jar" />
		<fileset dir="${jar.dir}" includes="${step.jar.name}" />
	</path>
	
	<!-- This target will build the toolkit module and deploy it to the local Ignition gateway -->
		<target name="BuildAndInstallModule" depends="clean, build, deploy" />

	<!-- Cleans previously built files - except for BLT jar files  -->
	<target name="clean" description="Remove previous test build products" >
		<delete dir="${basedir}/sfc-build/modules" />
		<delete dir="${basedir}/sfc-build/release" />
		<delete dir="${basedir}/sfc-build/temp_modl" />
	</target>	
	
	<!-- Compile the Common library -->
	<target name="common.build" description="Compile the source">
		<echo  message="Using Java version ${ant.java.version}."/>
		<mkdir dir="${common.bin.dir}"/>
		<javac destdir="${common.bin.dir}" debug="true" includeantruntime="false">
			<src path="${common.src.dir}"/>
			<classpath refid="ils-classpath"/>
		</javac>
	</target>
	<target name ="common.jar" description="Create a jar for the ILS Common library">
	    <jar destfile="${jar.dir}/${common.jar.name}" includes="**/*.class" basedir="${common.bin.dir}"/>
	</target>
	
	<!-- Builds the toolkit module jars and the final .modl file -->
	<target name="build" depends="common.build,common.jar" description="Compile the source">
		<echo message="${sfc.test.name} ${sfc.test.version}" />	
		<delete dir="${basedir}/sfc-build/temp_modl" />	
		
		<!-- build.date and version.build are both defined in build.xml -->
		<echo message="Build date: ${build.date}" />
		<echo message="Build version: ${version.build}" />	
				
		<!-- SFC Test Common jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${sfc.test.name}_Common" />
			<param name="sourceDirFolder" value="sfc-test-common" />
			<param name="jarName" value="sfc-test-common" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="external.jar.classpath"/>
		</antcall>
		
		<!-- SFC Test Gateway jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${sfc.test.name}_Gateway" />
			<param name="sourceDirFolder" value="sfc-test-gateway" />
			<param name="jarName" value="sfc-test-gateway" />
			<param name="javacSource" value="1.7" />
			<param name="[replace]sfc-testGateway.properties:Meta.Version" value="${version.build}" />
			<param name="[replace]sfc-testGateway.properties:Meta.ReleaseDate" value="${build.date}" />
			<param name="module.build.classpath" value="sfc.test.gateway.classpath"/>
		</antcall>

		<!-- SFC Test Client jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${sfc.test.name}_Client" />
			<param name="sourceDirFolder" value="sfc-test-client" />
			<param name="jarName" value="sfc-test-client" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="sfc.test.client.classpath"/>
		</antcall>
		
		<!-- SFC Test Designer jar -->
		<antcall target="MakeProject">
			<param name="modName" value="${sfc.test.name}_Designer" />
			<param name="sourceDirFolder" value="sfc-test-designer" />
			<param name="jarName" value="sfc-test-designer" />
			<param name="javacSource" value="1.7" />
			<param name="module.build.classpath" value="sfc.test.designer.classpath"/>
		</antcall>
		
		<!-- Create .modl file -->
		<echo message="Making ${sfc.test.name} modl" />

		<mkdir dir="${basedir}/sfc-build/temp_modl" />
		<mkdir dir="${basedir}/sfc-build/modules" />
		

		<copy file="${basedir}/sfc-build/module-ils-sfc-test.xml" tofile="${basedir}/sfc-build/temp_modl/module.xml" overwrite="true" />

		<replace file="${basedir}/sfc-build/temp_modl/module.xml" token="@NAME@" value="${sfc.test.name}" />
		<replace file="${basedir}/sfc-build/temp_modl/module.xml" token="@DESCRIPTION@" value="${sfc.test.description}" />
		<replace file="${basedir}/sfc-build/temp_modl/module.xml" token="@VERSION@" value="${sfc.test.version}" />

		<!-- Pack200 and then copy the designer, client jars -->
		<pack200 src="${basedir}/sfc-build/bin/${sfc.test.name}_Client/dist/sfc-test-client.jar" destfile="${basedir}/sfc-build/temp_modl/sfc-test-client.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/sfc-build/bin/${sfc.test.name}_Designer/dist/sfc-test-designer.jar" destfile="${basedir}/sfc-build/temp_modl/sfc-test-designer.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/sfc-build/bin/${sfc.test.name}_Common/dist/sfc-test-common.jar" destfile="${basedir}/sfc-build/temp_modl/sfc-test-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/ils-common.jar" destfile="${basedir}/sfc-build/temp_modl/ils-common.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/block-definition.jar" destfile="${basedir}/sfc-build/temp_modl/block-definition.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-core-2.2.3.jar" destfile="${basedir}/sfc-build/temp_modl/jackson-core-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" destfile="${basedir}/sfc-build/temp_modl/jackson-databind-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		<pack200 src="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" destfile="${basedir}/sfc-build/temp_modl/jackson-annotations-2.2.3.jar.pack.gz" gzipoutput="true" configfile="${p200props}" />
		
		<!-- Copy gateway jar -->
		<copy file="${basedir}/sfc-build/bin/${sfc.test.name}_Gateway/dist/sfc-test-gateway.jar" tofile="${basedir}/sfc-build/temp_modl/sfc-test-gateway.jar" />
		<copy file="${basedir}/sfc-build/bin/${sfc.test.name}_Common/dist/sfc-test-common.jar" tofile="${basedir}/sfc-build/temp_modl/sfc-test-common.jar" />
		<copy file="${basedir}/sfc-build/bin/${sfc.name}_Common/dist/ils-sfc-common.jar" todir="${basedir}/sfc-build/temp_modl" />
		<copy file="${basedir}/sfc-build/bin/${sfc.name}_Gateway/dist/ils-sfc-gateway.jar" todir="${basedir}/sfc-build/temp_modl" />
		
		<!-- Copy dependent jars -->
		<copy file="${basedir}/../../external/lib/ils-common.jar" todir="${basedir}/sfc-build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-core-2.2.3.jar" todir="${basedir}/sfc-build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-databind-2.2.3.jar" todir="${basedir}/sfc-build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/jackson-annotations-2.2.3.jar" todir="${basedir}/sfc-build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/commons-math3-3.1.1.jar" todir="${basedir}/sfc-build/temp_modl/" />
		<copy file="${basedir}/../../external/lib/ils-sfc-steps.jar" todir="${basedir}/sfc-build/temp_modl/" />

		<!-- Copy license file and javadoc into the bundle -->
		<mkdir dir="${basedir}/sfc-build/doc" />
		<copy file="${basedir}/sfc-build/license.html" todir="${basedir}/sfc-build/temp_modl/" />
		<copy todir="${basedir}/sfc-build/temp_modl/doc">
		    <fileset dir="${basedir}/sfc-build/doc"/>
		</copy>
		<!-- Echo the version into .version in the bundle and to be saved -->
		<echo message="${sfc.test.name}-${sfc.test.version}:${sfc.test.release}" file="${basedir}/sfc-build/temp_modl/.version" append="false"/>
		<echo message="${sfc.test.name}-${sfc.test.name}:${sfc.test.release}" file="${basedir}/sfc-build/.version" append="false"/>
		
		<!-- Zip it all up -->
		<zip zipfile="${basedir}/sfc-build/modules/${sfc.test.name}-module-unsigned.modl" basedir="${basedir}/sfc-build/temp_modl" />
	</target>

	<!-- Installs sfc-test module in local Ignition gateway. Note that the gateway must be running in developer mode for this to succeed. -->
	<target name="deploy" depends="build" >
		<echo message="Installing ${sfc.test.name} on Ignition Gateway." />
		<postmodule posturl="${local.gateway.url}" modulefile="${basedir}/sfc-build/modules/${sfc.test.name}-module-unsigned.modl" />
	</target>	

</project>
