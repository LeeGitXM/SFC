<project name="TranslatorBuilder" basedir="../" default="BuildTranslatorApplication">

	<import file="${basedir}/sfc-build/build.xml"/>

	<property name="version.build" value="14" />	
	<property name="root.dir" value="${basedir}/../.." />
	<property name="jar.dir" value="${root.dir}/external/lib" />
	<property name="sdk.dir" value="${root.dir}/ignition-77/lib" />
	<property name="common.jar.name" value="ils-common.jar" />
	<property name="common.bin.dir" value="${root.dir}/common/workspace/ILS_Common/bin" />
	<property name="common.src.dir" value="${root.dir}/common/workspace/ILS_Common/src" />
	<property name="translation.jar.name" value="g2-translation.jar" />
	<property name="translation.bin.dir" value="${root.dir}/sfc/workspace/g2-to-python/bin" />
	<property name="translation.src.dir" value="${root.dir}/sfc/workspace/g2-to-python/src" />
	<property name="ant.build.javac.source" value="1.7"/>
	<property name="ant.build.javac.target" value="1.7"/>
		
	<!-- External jar classpath -->
	<path id="ils-classpath">
	   <fileset dir="${jar.dir}">
	      <include name="*.jar"/>
	   </fileset>
		<fileset dir="${sdk.dir}">
			 <include name="*.jar"/>
		</fileset>
	   <pathelement path="${build.dir}"/>
	</path>
	
	
	<!-- Classpath for the application -->
	<!-- The gateway, designer and clients depend on the Common -->
	<path id="application.classpath">
		<path refid="Ignition_SDK.classpath" />
		<path refid="ExternalJar.classpath" />
	</path>
		
	<!-- translation jar classpath -->
	<path id="translator.classpath">
		<path refid="application.classpath" />
	</path>
	
	<!-- This target will build the toolkit module and deploy it to the local Ignition gateway -->
		<target name="BuildTranslatorApplication" depends="clean, build" />
	
	<!-- Clean translation -->
		<target name="clean" >
			<mkdir dir="${jar.dir}"/>
			<mkdir dir="${translation.bin.dir}"/>
			<delete file="${jar.dir}/${translation.jar.name}" />
			<delete>
			    <fileset dir="${translation.bin.dir}">
			        <include name="**/*.class"/>
			    </fileset>
			</delete>
		</target>
	
	<!-- Compile the translation Tool -->
	<target name="translation.build" description="Compile the translation tool">
		<mkdir dir="${translation.bin.dir}"/>
		<javac destdir="${translation.bin.dir}" debug="true" includeantruntime="false">
			<src path="${translation.src.dir}"/>
			<classpath refid="translator.classpath"/>
		</javac>
	</target>
	<!-- Build the translation jar with all necessary embedded jars -->
	<target name ="build" depends="translation.build" description="Create a jar for the translation tool">
		<jar destfile="${jar.dir}/${translation.jar.name}" includes="**/*.class" basedir="${translation.bin.dir}">
		    <zipgroupfileset dir="${jar.dir}" includes="sqlite-jdbc*.jar"/>
			<zipgroupfileset dir="${jar.dir}" includes="antlr*.jar"/>
			<zipgroupfileset dir="${jar.dir}" includes="commons-math*.jar"/>
			<zipgroupfileset dir="${sdk.dir}" includes="ignition-common.jar"/>
			<zipgroupfileset dir="${sdk.dir}" includes="designer-api.jar"/>
			<zipgroupfileset dir="${sdk.dir}" includes="client-api.jar"/>
			<zipgroupfileset dir="${jar.dir}" includes="ils-common.jar"/>
		</jar>
	</target>

</project>
