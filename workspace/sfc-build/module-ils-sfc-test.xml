<?xml version="1.0" encoding="UTF-8"?>
<modules>
	<module>
		<id>ilssfctest</id>
		<name>@NAME@</name>
		<description>@DESCRIPTION@</description>
		<version>@VERSION@</version>
		<license>license.html</license>
		<requiredignitionversion>7.7.1</requiredignitionversion>
		<requiredframeworkversion>6</requiredframeworkversion>
		<freemodule>true</freemodule>
		<documentation>index.html</documentation>
		
		<!-- Add the module dependencies for each scope -->
		<!-- NOTE: Build fails here if we specify a Gateway dependency -->
		<depends scope="D">ilssfc</depends>
		
		<!-- Load in our jars for each scope -->
		<jar scope="CD">sfc-test-client.jar.pack.gz</jar>
		<jar scope="D">sfc-test-designer.jar.pack.gz</jar>
		<jar scope="D">sfc-test-common.jar.pack.gz</jar>
		<jar scope="G">sfc-test-gateway.jar</jar>
		<jar scope="G">sfc-test-common.jar</jar>
		<jar scope="G">ils-common.jar</jar>
		<jar scope="G">ils-sfc-common.jar</jar> 
		<jar scope="G">ils-sfc-gateway.jar</jar>
		<jar scope="GD">jackson-core-2.2.3.jar</jar>
		<jar scope="GD">jackson-databind-2.2.3.jar</jar>
		<jar scope="GD">jackson-annotations-2.2.3.jar</jar>
		<!-- Tell the Gateway and/or Designer where to find the hooks -->
		<hook scope="G">com.ils.sfc.test.gateway.IlsSfcTestGatewayHook</hook>
		<hook scope="D">com.ils.sfc.test.designer.IlsSfcTestDesignerHook</hook>
		<hook scope="C">com.ils.sfc.test.client.IlsSfcTestClientHook</hook>
	</module>
</modules>
