<?xml version="1.0" encoding="UTF-8"?>

<module>
	<id>com.inductiveautomation.sdk.examples.sfc</id>
	<name>ILS SFC</name>
	<description></description>
	<license>license.html</license>
	<documentation>index.html</documentation>
	<version>1.0.0.0</version>
	<requiredignitionversion>7.7.0</requiredignitionversion>
	<requiredframeworkversion>6</requiredframeworkversion>
	

		<!-- Add the dependencies for each scope -->
		<depends scope="G">com.inductiveautomation.sfc</depends>
		<depends scope="D">com.inductiveautomation.sfc</depends>
		<depends scope="C">com.inductiveautomation.sfc</depends>
		<depends scope="G">com.ils.sfc</depends>
		<depends scope="D">com.ils.sfc</depends>
		<depends scope="C">com.ils.sfc</depends>


		<!-- Load in our jars for each scope -->
		<jar scope="D">sfc-example-designer.jar.pack.gz</jar>
		<jar scope="DC">sfc-example-client.jar.pack.gz</jar>
		<jar scope="G">sfc-example-gateway.jar</jar>
		<jar scope="G">sfc-example-common.jar</jar>
		<jar scope="DC">sfc-example-common.jar.pack.gz</jar>
		
		<jar scope="D">ils-sfc-designer.jar.pack.gz</jar>
		<jar scope="DC">ils-sfc-client.jar.pack.gz</jar>
		<jar scope="G">ils-sfc-gateway.jar</jar>
		<jar scope="G">ils-sfc-common.jar</jar>
		<jar scope="DC">ils-sfc-common.jar.pack.gz</jar>


		<!-- Tell the Gateway and/or Designer where to find the hooks -->
		<hook scope="G">com.inductiveautomation.sdk.examples.sfc.SfcExampleGatewayHook</hook>
		<hook scope="C">com.inductiveautomation.sdk.examples.sfc.SfcExampleClientHook</hook>
		<hook scope="D">com.inductiveautomation.sdk.examples.sfc.SfcExampleDesignerHook</hook>
		<hook scope="G">com.ils.sfc.SfcExampleGatewayHook</hook>
		<hook scope="C">com.ils.sfc.SfcExampleClientHook</hook>
		<hook scope="D">com.ils.sfc.SfcExampleDesignerHook</hook>

</module>

