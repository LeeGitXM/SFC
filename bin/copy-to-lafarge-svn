#!/bin/sh
#
# Save build products to the Subversion area for packaging.
# Make sure that the release area has been cleaned and
# VERS, DATE files updated
#
#set -x
SVN=~/Development/ils/svn/Lafarge/Release/src
# Prepare directories
mkdir -p $SVN/project
mkdir -p $SVN/data
cd $REPO_ROOT/sfc
cp -a data $SVN
cd ${GIT_REPO}/sfc/project
cp sfc_demo_proj.proj $SVN/project
SVN=~/Development/ils/svn/Lafarge/Ignition
cp ${GIT_REPO}/sfc/workspace/sfc-build/modules/ILS-SFC-module-*.modl $SVN
