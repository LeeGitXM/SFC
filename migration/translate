#!/bin/sh
#  Procedure migration script. File is in the local directory
# -- options for log.level:  INFO,DEBUG,TRACE
# Variant is diagnostic toolkit calculations.
#
if [ $# -lt 2 ]
then
    echo "USAGE: translate <file> <outdir>"
	exit 2
fi
REPO=${GIT_REPO}
SFC=$REPO/sfc
cd $SFC
LIB=$REPO/external/lib
JAR=${LIB}/g2-translation.jar
DB=${SFC}/migration/mdb/conversion.db
OUTDIR=$2
mkdir -p ${OUTDIR}
#java -cp ${JAR} -Dlog.level=TRACE com.ils.python.translation.G2ProcedureTranslator $1 ${OUTDIR} ${DB} 
java -cp ${JAR} -Dprocedure.variant=diag.calculation -Dlog.level=WARN com.ils.python.translation.G2ProcedureTranslator $1 ${OUTDIR} ${DB} 
