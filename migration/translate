#!/bin/sh
#  Procedure migration script
# -- options for log.level:  INFO,DEBUG,TRACE
#
if [ $# -lt 1 ]
then
    echo "USAGE: translate <file>"
	exit 2
fi
REPO=~/Development/ils/src
cd $REPO/sfc
SFC=`pwd`
LIB=$REPO/external/lib
JAR=${LIB}/g2-translation.jar
DB=${SFC}/migration/mdb/conversion.db
OUTDIR=${SFC}/procs/python
mkdir -p ${OUTDIR}
#cat $1 | java -cp ${JAR} -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000 -Dlog.level=INFO -Droot.class=APPLICATION com.ils.blt.migration.Migrator ${DB}
cat $1 | java -cp ${JAR} -Dprocedure.package= -Dprocedure.variant=sfc.onstart -Dlog.level=DEBUG com.ils.python.translation.G2ProcedureTranslator ${OUTDIR} ${DB} 
